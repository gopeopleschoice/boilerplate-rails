<%= simple_form_for @user, defaults: { input_html: { class: "form-control" } }, remote: true do |f| %>


  <div class="modal-body">

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <%= f.input :email, input_html: {class: "form-control input-lg"} %>
    <%= f.input :password, input_html: {class: "form-control input-lg"} %>
    <%= f.input :password_confirmation, input_html: {class: "form-control input-lg"} %>

  </div>
  <div class="modal-footer">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>