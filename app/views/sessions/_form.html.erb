<%= form_tag sessions_path, html: {id: "new_session"}, remote: true do %>
  <div class="modal-body">
    <div class="notifications"></div>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: "form-control input-lg", placeholder: "Email address" %>
    </div>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control input-lg", placeholder: "Password" %>
  </div>
  <div class="modal-footer">
    <%= submit_tag "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>