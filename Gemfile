# source 'https://rubygems.org'
source 'http://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Use postgresql as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
gem 'therubyracer', platforms: :ruby, group: :development

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
# gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# LESS in the asset pipline.
gem 'less-rails'

# jQuery UI elements
gem 'jquery-ui-rails'

# jQuery (blueimp) fileupload in the asset piple
gem 'jquery-fileupload-rails'

# Use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.0.0'

# Unicorn workers
gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# Markdown parser
gem 'redcarpet'

# File Uploads
gem 'carrierwave'

# Image processing
gem 'mini_magick'

# Easy forms
gem 'simple_form', github: 'plataformatec/simple_form'

# Roles made easy
gem 'rolify',      github: 'EppO/rolify'

# Breadcrumbs
gem 'gretel',      github: 'lassebunk/gretel', branch: '3.0.0'

# Permalinks, slugs, handles, etc
gem 'friendly_id', github: 'norman/friendly_id'

# For dynamic sorting
gem 'acts_as_list'

# Bootsrap
gem 'bootstrap-on-rails', github: 'jasontorres/bootstrap-on-rails'
gem 'will_paginate', '~> 3.0'
gem 'will_paginate-bootstrap', github: 'nickpad/will_paginate-bootstrap'
gem 'font-awesome-rails'
gem 'fancybox2-rails', '~> 0.2.4'